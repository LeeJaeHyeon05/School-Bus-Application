<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.student.bus.B2Fragment">

    <TextView
        android:id="@+id/startStopBusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:text="2호차 운행 중"
        android:textSize="30sp"
        android:textColor="#09A619"
        />

    <TextView
        android:id="@+id/sapphiraSaigonPearlTower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startStopBusTextView"
        android:text=""
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/newcity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sapphiraSaigonPearlTower"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=""
        android:textSize="23sp"
        android:layout_marginTop="35dp"
        android:textColor="@color/gray"/>

    <TextView
        android:id="@+id/newcity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/newcity1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=""
        android:textSize="23sp"
        android:layout_marginTop="35dp"
        android:textColor="@color/gray"/>


    <TextView
        android:id="@+id/theSunAvenueSAVSubgate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/newcity2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=""
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:textColor="@color/gray"/>


</androidx.constraintlayout.widget.ConstraintLayout>